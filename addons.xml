<?xml version='1.0' encoding='UTF-8'?>
<addons>
  <addon id="plugin.audio.navahang" name="Navahang" version="2.3" provider-name="Amir Ammari">
    <requires>
      <import addon="xbmc.python" version="2.25.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
      <provides>audio</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
      <summary lang="en_GB">Plugin for Navahang</summary>
      <description lang="en_GB">Navahang is a media company with one of the largest online archives, dedicated to Persian music along with 24/7 Live Radio.</description>
      <disclaimer lang="en_GB">This plugin is not endorsed by Navahang LLC</disclaimer>
      <summary lang="fa_IR">افزونه برای نواهنگ</summary>
      <description lang="fa_IR">نواهنگ یک شرکت رسانه ای با یکی از بزرگترین آرشیو های آنلاین است که به موسیقی فارسی و همراه با ۲۴/۷ رادیو زنده اختصاص یافته است.</description>
      <disclaimer lang="fa_IR">این افزونه توسط شرکت نواهنگ تایید نشده است</disclaimer>
      <platform>all</platform>
      <language>fa</language>
      <license>GNU GENERAL PUBLIC LICENSE. Version 2, June 1991</license>
      <forum></forum>
      <website>https://www.navahang.com</website>
      <email>amirrammari@gmail.com</email>
      <source>https://github.com/amirrammari/kodi-repo-plugins/tree/master/plugin.audio.navahang</source>
      <news>Fix Bugs</news>
      <assets>
        <icon>resources/icon.png</icon>
        <fanart>resources/fanart.jpg</fanart>
        <screenshot>resources/screenshot-01.jpg</screenshot>
        <screenshot>resources/screenshot-02.jpg</screenshot>
        <screenshot>resources/screenshot-03.jpg</screenshot>
      </assets>
    </extension>
  </addon>
  <addon id="repository.amirrammari" name="AmirAmmari Repo" version="1.1" provider-name="Amir Ammari">
    <extension point="xbmc.addon.repository" name="AmirAmmari Repo">
        <info compressed="false">https://raw.githubusercontent.com/amirrammari/kodi-repo-plugins/master/addons.xml</info>
        <checksum>https://raw.githubusercontent.com/amirrammari/kodi-repo-plugins/master/addons.xml.gz.md5</checksum>
        <datadir zip="true">https://raw.githubusercontent.com/amirrammari/kodi-repo-plugins/master/</datadir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Install AmirAmmari Addons</summary>
        <description>Download and install AmirAmmari addons</description>
        <platform>all</platform>
        <license>GNU GENERAL PUBLIC LICENSE. Version 2, June 1991</license>
        <forum></forum>
        <website></website>
        <email>amirrammari@gmail.com</email>
        <source>https://github.com/amirrammari/kodi-repo-plugins/tree/master/repository.amirrammari</source>
        <news>Fix Bugs</news>
    </extension>
  </addon>
  <addon id="plugin.program.simplenote" name="Simplenote" version="1.0" provider-name="Amir Ammari">
